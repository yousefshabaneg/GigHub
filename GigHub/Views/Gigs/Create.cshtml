@model GigHub.ViewModels.GigFormViewModel
@{
    ViewBag.Title = "Create a Gig";
}


@using (Html.BeginForm("Create", "Gigs"))
{
    <h2>Add a Gig</h2>
    <div class="form-group">
        @Html.LabelFor(m => m.Venue)
        @Html.TextBoxFor(m => m.Venue, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Time)
        @Html.TextBoxFor(m => m.Time, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Genre)
        @Html.DropDownListFor(m => m.Genre, new SelectList(Model.Genres, "Id", "Name"), "Select Music Genre.", new { @class = "form-control" })
    </div>
    <button type="submit" value="Save" class="btn btn-primary btn-block mt-4">Save</button>
}
