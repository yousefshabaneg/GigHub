@model GigHub.ViewModels.GigFormViewModel
@{
    ViewBag.Title = "Create a Gig";
}

<div class="container pl-4">
    <h2>Add a Gig</h2>
    @using (Html.BeginForm("Create", "Gigs"))
    {
        <p class="alert alert-info mt-3">All fields are <strong >Required</strong></p>
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m => m.Venue)
            @Html.TextBoxFor(m => m.Venue, new { @class = "form-control" , autofocus="autofocus"})
            @Html.ValidationMessageFor(m => m.Venue)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Date)
            @Html.TextBoxFor(m => m.Date, new { @class = "form-control", placeholder = "eg 5 Oct 2021" })
            @Html.ValidationMessageFor(m => m.Date)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Time)
            @Html.TextBoxFor(m => m.Time, new { @class = "form-control", placeholder = "eg 20:00" })
            @Html.ValidationMessageFor(m => m.Time)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Genre)
            @Html.DropDownListFor(m => m.Genre, new SelectList(Model.Genres, "Id", "Name"), "Select Music Genre.", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Genre)
        </div>
        <button type="submit" value="Save" class="btn btn-primary">Save</button>
    }
</div>


@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
